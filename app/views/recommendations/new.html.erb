<h2><%= @doctor.first_name %> <%= @doctor.last_name %></h2>

<%= form_for @recommendation do |f| %>
  <%= f.text_area :review, placeholder: "Write a review..." %>
  <ul class="tag-list">
    <% @tags.each do |tag| %>
    <li>
      <%= f.check_box :tags, {multiple: true, class: "tag"}, tag, nil %>
      <% id = ("tags_" + tag.gsub(" ", "_")).to_sym %>
      <%= f.label id, tag, class: "tag-label" %>
    </li>
    <% end %>
  </ul>
  <%= f.fields_for :tags do |tag_form| %>
    <%= tag_form.text_field :description, placeholder: "Add a tag" %>
    <%= tag_form.submit "Add", class: "add-tag" %>
  <% end %>
  <%= f.submit %>
<% end %>
