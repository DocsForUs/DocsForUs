<div class="doctor-info-container">
  <div class="doctor-main">
    <h3><%= @doctor.first_name %> <%= @doctor.last_name %>  </h3>
    <p><%= @doctor.specialty %></p>
    <ul class="doctor-links">
      <li><%= link_to "Recommend this doctor", new_recommendation_path %></li>
      <li><%= link_to "Save this doctor" %></li>
    </ul>
  </div>
  <div class="doctor-details">
    <ul class="doc-info-list">
      <li>Gender: <%= @doctor.gender %></li>
      <li>Address:
        <%= "#{@doctor.street}, #{@doctor.city}, #{@doctor.state} #{@doctor.zipcode}"%>
      </li>
      <li>Phone Number: <%= @doctor.phone_number %></li>
      <li>Email Address: <%= @doctor.email_address %></li>
    </ul>
    <div class="doctor-tags-div">
      <% if !@doctor.recommendations.empty? %>
        <h4>Users said this doctor...</h4>
        <ul class="doctor-tags">
          <% @doctor.recommendations.each do |rec| %>
            <% rec.tags.each do |t| %>
              <li>
                <%= t.description %>
              </li>
            <% end %>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
  <div class="doctor-reviews">
    <% if @doctor.recommendations %>
    <% @doctor.recommendations.each do |rec| %>
      <div class="single-rec">
        <div class="review-profile"><%= rec.review %></div>
        <ul class="tag-list">
          <% rec.tags.each do |tag| %>
            <li class="rec-tags-profile">
              <%= tag.description %>
            </li>
          <% end %>
        </ul>
        <p>
          Recommended on <%= rec.created_at.localtime.strftime('%m/%d/%Y at %I:%M %p')
%>
        </p>
      </div>
    <% end %>
    <% else %>
    <p>You have not recommended any doctors yet.</p>
    <% end %>
  </div>
  </div>
