<section id="login-page">
<h1>Login</h1>
<% if flash[:alert] %>
  <%= render "/shared/flash" %>
<% end %>
<div class="login-form">
  <%= form_for :user do |f| %>
    <%= f.email_field :email, placeholder: 'email', required: true %>
    <%= f.password_field :password, placeholder: 'password', required: true %>
    <%= f.submit "Login" %>
  <% end %>
</div>
</section>
